{% extends 'base.html.twig' %}

{% block title %}Listagem {{ entityName|capitalize }}{% endblock %}

{% set registerListAttr = [] %}
{% for register in registers %}
    {% set registerListAttr = registerListAttr|merge ([{
        'Id': register.id,
        'Label': register.label,
        'Formulario': register.agrupador ? register.agrupador.formulario.nome : '',
        'Agrupador': register.agrupador ? register.agrupador.titulo : '',
        'Linha': register.linha,
        'Coluna': register.coluna,
    }]) %}
{% endfor %}

{% set actionList = {
    'new': true,
    'show': true,
    'edit': true,
    'delete': true,
    'image': false,
} %}

{% block body %}
    {% include 'generic/_body_title.html.twig' with {title: 'Listagem - '~entityName|capitalize} %}
    {{ include(template.indexActions) }}
    {{ include(template.indexFooter) }}
{% endblock %}