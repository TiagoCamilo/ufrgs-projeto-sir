{% extends 'base.html.twig' %}

{% block title %}Listagem {{ entityName|capitalize }}{% endblock %}

{% set registerListAttr = [] %}
{% for register in registers %}
    {% set registerListAttr = registerListAttr|merge ([{
        'Id': register.id,
        'Titulo': register.titulo,
        'Ordem': register.ordem,
        'Formulario': register.formulario.nome,
    }]) %}
{% endfor %}

{% set actionList = {
    'new': true,
    'show': true,
    'edit': true,
    'delete': true,
    'image': false,
} %}

{% block body %}
    <h1>Listagem {{ entityName|capitalize|replace({'_':' '}) }}</h1>
    {{ include(template.indexActions) }}
    {{ include(template.indexFooter) }}
{% endblock %}