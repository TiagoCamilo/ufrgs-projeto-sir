{% extends 'base.html.twig' %}

{% block title %}Comentario{% endblock %}

{% block body %}
    <h1>Comentario</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ register.id }}</td>
            </tr>
            <tr>
                <th>Data_hora</th>
                <td>{{ register.dataHora ? register.dataHora|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Descricao</th>
                <td>{{ register.descricao | raw }}</td>
            </tr>
        </tbody>
    </table>

    {{ include(template~'/_show_buttons.html.twig') }}

{% endblock %}
