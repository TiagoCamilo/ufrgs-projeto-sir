{% extends 'base.html.twig' %}

{% block title %}Edit Comentario{% endblock %}

{% block body %}
    <h1>Editar Comentario</h1>

    {{ include('comentario/_form.html.twig', {'button_label': 'Update'}) }}

    <br/>
    {{ include('comentario/_delete_form.html.twig') }}

    {% block timeline %}
        {{ render(controller(
            'App\\Controller\\TimelineController::index'
        )) }}
    {% endblock %}

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/js/ckeditor/adapters/jquery.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $(function() {
            $('textarea.ckeditor').ckeditor();
        });
    </script>
{% endblock %}