{% extends 'base.html.twig' %}

{% block title %}Parecer index{% endblock %}

{% block body %}
    <h1>Parecer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Data_hora</th>
                <th>Descricao</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parecer in parecers %}
            <tr>
                <td>{{ parecer.id }}</td>
                <td>{{ parecer.dataHora ? parecer.dataHora|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ parecer.descricao }}</td>
                <td>
                    <a href="{{ path('parecer_show', {'id': parecer.id}) }}">show</a>
                    <a href="{{ path('parecer_edit', {'id': parecer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('parecer_new') }}">Create new</a>
{% endblock %}
