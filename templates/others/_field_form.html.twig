{% if campo.tipo == 'TextType' %}
    {% set fieldType = 'others/_field_text.html.twig' %}
{% endif %}
{% if campo.tipo == 'TextareaType' %}
    {% set fieldType = 'others/_field_textarea.html.twig' %}
{% endif %}

{% if formularioRegistro is defined %}
    {% for campoRegistro in formularioRegistro.formularioRegistroCampos %}
        {% if campoRegistro.formularioCampo.id == campo.id %}
            {% include fieldType with {'id': campo.id, 'label': campo.label, 'valor': campoRegistro.valor } %}
        {% endif %}
    {% endfor %}
{% else %}
    {% include fieldType with {'id': campo.id, 'label': campo.label } %}
{% endif %}