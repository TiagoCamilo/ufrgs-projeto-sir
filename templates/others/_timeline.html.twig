
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div style="display:inline-block;width:100%;overflow-y:auto;">
                <ul class="timeline timeline-horizontal">
                    {% for register in registers %}
                        <li class="timeline-item">
                            <div class="timeline-badge success"><i class="fas fa-comments"></i></div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <h6 class="timeline-title">
                                        Comentário
                                        <i onclick="copyValue('{{ register.descricao|raw }}')" class="cursor fas fa-2x fa-paste float-right"></i>
                                    </h6>
                                    <p><small class="text-muted"><i class="fas fa-clock"></i>
                                            {{ register.dataHora|date('d/m/Y H:i:s') }}
                                        </small></p>
                                </div>
                                <div class="timeline-body">
                                    <p>{{ register.descricao|raw }}</p>
                                    {% if(register.file is defined and register.file != null) %}
                                        <div>
                                            {% if(register.file.extension =="mp4") %}
                                                <video width="100%" controls>
                                                    <source src="{{ asset('uploads/' ~ register.file.filename  ) }}" type="video/mp4">
                                                    Your browser does not support the video tag.
                                                </video>
                                            {% else %}
                                                <img width="100%" src="{{ asset('uploads/' ~ register.file.filename  ) }}" alt="Arquivo do comentário">
                                            {% endif %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </li>
                    {% endfor %}

                </ul>
            </div>
        </div>
    </div>
</div>

<script src="{{ asset('assets/js/jquery.js') }}"></script>

<script>

    function copyValue(data){
        editor = CKEDITOR.instances.acompanhamento_descricao;
        editor.setData(editor.getData()+data);
    }



</script>