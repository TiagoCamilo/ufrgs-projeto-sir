<div class="card-body" >
    <h6 class="card-title">De: {{ register.educador.nome }}</h6>
    <p class="card-text"><small class="text-muted">{{ register.dataHora ? register.dataHora|date('d/m/Y H:i:s') : '' }}</small></p>
    <div class="card-text" id="register_{{ entityType }}_{{ register.id }}">{{ register.descricao }}</div>
</div>
{% if register.file is defined %}
    <div class="col-lg-7 mx-auto">
        {% if(register.file.extension =="mp4") %}
            <video width="100%" controls>
                <source src="{{ asset('uploads/' ~ register.file.filename  ) }}" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        {% else %}
            <img  class="card-img-bottom" src="{{ asset('uploads/' ~ register.file.filename  ) }}" alt="Arquivo do comentÃ¡rio">
        {% endif %}
    </div>
{% endif %}
