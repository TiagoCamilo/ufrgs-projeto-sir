<label for="{{ id }}">{{ label }}</label>

{% if valor is defined %}
    <input type="text" class="form-control" id="{{ campo.id }}" name="{{ campo.id }}" value="{{ valor }}"/>
{% else %}
    <input type="text" class="form-control" id="{{ campo.id }}" name="{{ campo.id }}" value="{{ form_helper.getEntityValue('getNome') }}" />
{% endif %}