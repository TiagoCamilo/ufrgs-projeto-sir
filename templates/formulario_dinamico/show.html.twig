{% extends 'base.html.twig' %}

{% block title %}Formulario Build{% endblock %}

{% block body %}
    <h1>Formulario Build</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ formulario.id }}</td>
        </tr>
        <tr>
            <th>Nome</th>
            <td>{{ formulario.nome }}</td>
        </tr>


        </tbody>
    </table>
    <form action="{{ path("formulario_dinamico_new") }}">
{% for campo in formulario.formularioCampos %}
